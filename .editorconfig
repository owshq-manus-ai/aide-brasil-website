# EditorConfig helps maintain consistent coding styles across different editors

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{json,yml,yaml}]
indent_size = 2

[*.{js,jsx,ts,tsx}]
indent_size = 2
quote_type = single

[*.css]
indent_size = 2

[Makefile]
indent_style = tab